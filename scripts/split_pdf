#!/bin/sh
# Split the Source PDF into pdfs by chapter
# pdftk source.pdf cat 15-52 output.pdf

# +14 for correct page

pdftk source.pdf cat 15-58 output chapter_1.pdf
pdftk source.pdf cat 58-72 output chapter_2.pdf
pdftk source.pdf cat 72-85 output chapter_3.pdf
pdftk source.pdf cat 85-103 output chapter_4.pdf
pdftk source.pdf cat 103-136 output chapter_5.pdf
pdftk source.pdf cat 136-155 output chapter_6.pdf
pdftk source.pdf cat 155-194 output chapter_7.pdf
pdftk source.pdf cat 194-207 output chapter_8.pdf
pdftk source.pdf cat 208-234 output chapter_9.pdf
pdftk source.pdf cat 235-292 output chapter_10.pdf
pdftk source.pdf cat 292-337 output chapter_11.pdf
pdftk source.pdf cat 337-388 output chapter_12.pdf
pdftk source.pdf cat 388-417 output chapter_13.pdf
pdftk source.pdf cat 417-452 output chapter_14.pdf
pdftk source.pdf cat 452-484 output chapter_15.pdf
pdftk source.pdf cat 484-500 output chapter_16.pdf
pdftk source.pdf cat 500-519 output chapter_17.pdf
pdftk source.pdf cat 519-542 output chapter_18.pdf
pdftk source.pdf cat 542-556 output chapter_19.pdf
pdftk source.pdf cat 556-600 output chapter_20.pdf
pdftk source.pdf cat 600-615 output bibliography.pdf
pdftk source.pdf cat 615-end output index.pdf
